<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical">


    <Button
        android:id="@+id/playVib"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginEnd="7dp"
        android:background="?selectableItemBackground"
        android:drawableLeft="@drawable/ic_telephone"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backtochoice"
        app:layout_constraintTop_toTopOf="@+id/planesecondscore" />

    <Button
        android:id="@+id/backtochoice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="264dp"
        android:background="?selectableItemBackground"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintBottom_toBottomOf="@+id/playVib"
        app:layout_constraintEnd_toStartOf="@+id/playVib"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/planesecondscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/planesecondscore"
        app:layout_constraintStart_toStartOf="@+id/backtochoice"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pitchButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/scdream2"
        android:text="날"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintBaseline_toBaselineOf="@+id/pitchbutton2"
        app:layout_constraintStart_toStartOf="@+id/pitchbutton5" />

    <Button
        android:id="@+id/pitchbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/scdream2"
        android:text="아"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintStart_toEndOf="@+id/pitchButton1"
        app:layout_constraintTop_toBottomOf="@+id/planesecondscore" />

    <Button
        android:id="@+id/pitchbutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/scdream2"
        android:text="라"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintStart_toEndOf="@+id/pitchbutton2"
        app:layout_constraintTop_toBottomOf="@+id/planesecondscore" />

    <Button
        android:id="@+id/pitchbutton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/scdream2"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintBaseline_toBaselineOf="@+id/pitchbutton3"
        app:layout_constraintEnd_toEndOf="@+id/pitchbutton8" />

    <Button
        android:id="@+id/pitchbutton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/scdream2"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pitchButton1" />

    <Button
        android:id="@+id/pitchbutton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/scdream2"
        android:text="날"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintStart_toEndOf="@+id/pitchButton1"
        app:layout_constraintTop_toBottomOf="@+id/pitchButton1" />

    <Button
        android:id="@+id/pitchbutton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/scdream2"
        android:text="아"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintBaseline_toBaselineOf="@+id/pitchbutton6"
        app:layout_constraintEnd_toStartOf="@+id/pitchbutton4" />

    <Button
        android:id="@+id/pitchbutton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/scdream2"
        android:text="라"
        android:textSize="20dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintStart_toEndOf="@+id/pitchbutton3"
        app:layout_constraintTop_toBottomOf="@+id/pitchbutton4" />

    <TextView
        android:id="@+id/pitchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/highpitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/highpitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/scdream2"
        android:text="높아요!"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/pitchline"
        app:layout_constraintEnd_toStartOf="@+id/pitchTextView"
        app:layout_constraintStart_toStartOf="@+id/pitchTextView" />

    <ImageView
        android:id="@+id/pitchline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pitchline" />

    <TextView
        android:id="@+id/lowpitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/scdream2"
        android:text="낮아요!"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/highpitch"
        app:layout_constraintTop_toBottomOf="@+id/pitchline" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="101dp"
        android:background="?selectableItemBackground"
        android:onClick="onClick_next"
        android:scaleType="fitCenter"
        android:tint="#9C27B0"
        app:layout_constraintBottom_toTopOf="@+id/highpitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pitchbutton8"
        app:layout_constraintTop_toBottomOf="@+id/pitchbutton8"
        app:srcCompat="@android:drawable/ic_media_next" />

    <ImageButton
        android:id="@+id/last"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="259dp"
        android:background="?selectableItemBackground"
        android:onClick="onClick_last"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_media_previous"
        android:tint="#9C27B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>