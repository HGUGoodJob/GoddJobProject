<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back">

    <ImageView
        android:id="@+id/firstmusicscore"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="bottom"
        android:scaleType="centerInside"
        android:src="@drawable/firstscore" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pitchButton"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream2"
            android:text="떴"
            android:textColor="@drawable/selected_btn"
            android:textSize="20dp"
            android:background="?selectableItemBackground"
            android:theme="@style/AppTheme.BlueRipple" />

        <Button
            android:id="@+id/pitchbutton2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream2"
            android:text="다"
            android:textColor="@drawable/selected_btn"
            android:textSize="20dp"
            android:background="?selectableItemBackground"
            android:theme="@style/AppTheme.BlueRipple" />

        <Button
            android:id="@+id/pitchbutton3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream2"
            android:text="떴"
            android:textColor="@drawable/selected_btn"
            android:textSize="20dp"
            android:background="?selectableItemBackground"
            android:theme="@style/AppTheme.BlueRipple"/>

        <Button
            android:id="@+id/pitchbutton4"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="다"
            android:textColor="@drawable/selected_btn"
            android:fontFamily="@font/scdream2"
            android:textSize="20dp"
            android:background="?selectableItemBackground"
            android:theme="@style/AppTheme.BlueRipple" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pitchbutton5"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream2"
            android:text="비"
            android:textColor="@drawable/selected_btn"
            android:textSize="20dp"
            android:background="?selectableItemBackground"
            android:theme="@style/AppTheme.BlueRipple"  />

        <Button
            android:id="@+id/pitchbutton6"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream2"
            android:text="행"
            android:textColor="@drawable/selected_btn"
            android:textSize="20dp"
            android:background="?selectableItemBackground"
            android:theme="@style/AppTheme.BlueRipple"  />

        <Button
            android:id="@+id/pitchbutton7"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream2"
            android:text="기"
            android:textColor="@drawable/selected_btn"
            android:textSize="20dp"
            android:background="?selectableItemBackground"
            android:theme="@style/AppTheme.BlueRipple"  />


        <Button
            android:id="@+id/pitchbutton8"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream2"
            android:text=""
            android:textSize="20dp"
            android:background="?selectableItemBackground"
            android:theme="@style/AppTheme.BlueRipple" />

    </LinearLayout>

    <TextView
    android:id="@+id/pitchTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="0"
    android:textColor="#000000"
    android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/highpitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Too high!"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/pitchline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            app:srcCompat="@drawable/pitchline" />

        <TextView
            android:id="@+id/lowpitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:text="Too low!"
            android:textSize="30dp"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>