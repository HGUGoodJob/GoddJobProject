<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/backlevel">


    <Button
        android:id="@+id/levelhigh"
        android:layout_gravity="center"
        android:background="?selectableItemBackground"
        android:theme="@style/AppTheme.BlueRipple"
        android:drawableLeft="@drawable/ic_free_icon_musical_note_126493"
        android:fontFamily="@font/scdream2"
        android:paddingLeft="140dp"
        android:text="@string/high"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"     />

    <Button
        android:id="@+id/levelmiddle"
        android:background="?selectableItemBackground"
        android:theme="@style/AppTheme.BlueRipple"
        android:drawableLeft="@drawable/ic_free_icon_musical_note_126493"
        android:fontFamily="@font/scdream2"
        android:paddingLeft="140dp"
        android:text="@string/middle"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <Button
        android:id="@+id/levellow"
        android:background="?selectableItemBackground"
        android:theme="@style/AppTheme.BlueRipple"
        android:drawableLeft="@drawable/ic_free_icon_musical_note_126493"
        android:fontFamily="@font/scdream2"
        android:paddingLeft="140dp"
        android:text="@string/low"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"    />

</LinearLayout>