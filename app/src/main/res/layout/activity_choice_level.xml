<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/backtochoice"
        android:layout_width="43dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="?selectableItemBackground"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintBottom_toTopOf="@+id/levelhigh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home"
        android:layout_width="43dp"
        android:layout_height="53dp"
        android:layout_marginTop="2dp"
        android:background="?selectableItemBackground"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintStart_toEndOf="@+id/backtochoice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/levelhigh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackground"
        android:drawableLeft="@drawable/ic_free_icon_musical_note_126493"
        android:fontFamily="@font/scdream2"
        android:paddingLeft="100dp"
        android:text="@string/high"
        android:textSize="30dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintBottom_toTopOf="@+id/levelmiddle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backtochoice" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="196dp"
        android:background="@drawable/buttonblack"
        app:layout_constraintBottom_toBottomOf="@+id/levellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/levelhigh" />

    <Button
        android:id="@+id/levelmiddle"
        android:layout_width="411dp"
        android:layout_height="192dp"
        android:background="?selectableItemBackground"
        android:drawableLeft="@drawable/ic_free_icon_musical_note_126493"
        android:fontFamily="@font/scdream2"
        android:paddingLeft="100dp"
        android:text="@string/middle"
        android:textSize="30dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintBottom_toTopOf="@+id/levellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelhigh" />

    <Button
        android:id="@+id/levellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackground"
        android:drawableLeft="@drawable/ic_free_icon_musical_note_126493"
        android:fontFamily="@font/scdream2"
        android:paddingLeft="100dp"
        android:text="@string/low"
        android:textSize="30dp"
        android:theme="@style/AppTheme.BlueRipple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelmiddle" />

</androidx.constraintlayout.widget.ConstraintLayout>